@page "{p:int?}"
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Index</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prices[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prices[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prices[0].Modified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prices[0].SKU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prices[0].MarketId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prices[0].CurrencyCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prices[0].ValidFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prices[0].ValidUntil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prices[0].UnitPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Prices)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SKU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarketId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidUntil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    <a asp-page="./Sku" asp-route-sku="@item.SKU">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" aria-label="Previous" asp-page="./Index" asp-route-p="@Model.Pager.PreviousPage">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (int i = -3; i <= 3; i++)
        {
            var j = i + Model.Pager.CurrentPage;
            if (j > 0 && j == Model.Pager.CurrentPage)
            {
                <li class="page-item active" aria-current="page">
                    <span class="page-link">@j</span>
                </li>
            }
            else if (j > 0)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="./Index" asp-route-p="@j">@j</a>
                </li>
            }
        }
        <li class="page-item">
            <a class="page-link" aria-label="Next" asp-page="./Index" asp-route-p="@Model.Pager.NextPage">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>